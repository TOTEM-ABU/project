generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  books     Book[]
  createdAt DateTime @default(now())
}

model Book {
  id        Int      @id @default(autoincrement())
  name      String
  price     Int
  createdAt DateTime @default(now())
  Author    Author?  @relation(fields: [authorId], references: [id])
  authorId  Int?
}
